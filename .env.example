# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=admin
POSTGRES_PASSWORD=password
POSTGRES_DB=imageboard

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080

# JWT Configuration
JWT_SECRET=your-32-byte-secret-here-change-in-production
JWT_EXPIRY=24h

# Storage Configuration
STORAGE_TYPE=local
UPLOAD_DIR=/uploads
UPLOAD_URL_PREFIX=/uploads

# S3 Configuration (when STORAGE_TYPE=s3)
S3_BUCKET=my-bucket
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your_aws_access_key
S3_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BASE_URL=https://my-bucket.s3.amazonaws.com

# Storage Settings
STORAGE_TIMEOUT_SECONDS=10

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_BURST=10

# Post Limits
MAX_POST_LENGTH=5000
MAX_TAGS=10

# Board Settings
DEFAULT_MAX_THREADS=100
DEFAULT_MAX_REPLIES=500
DEFAULT_MAX_IMAGE_SIZE=5242880

# Archiving
ARCHIVE_DELETE_DAYS=30

# Logging
LOG_LEVEL=info
LOG_FILE=stdout

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_ALLOW_CREDENTIALS=true
